@model IEnumerable<EducationPortal.Models.EducationDetailsViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EducationDetailFilePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducationDetailDailyPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducationDetailQuota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducationDetailTotalTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducationViewModel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EducationDetailFilePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationDetailDailyPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationDetailQuota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationDetailTotalTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationViewModel.EducationName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
